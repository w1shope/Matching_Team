<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BABABA"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="75dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="동아대학교 계정 이메일로만 회원가입이 가능합니다"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/editTextRegisterEmail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textSize="30dp"></EditText>

        <Button
            android:id="@+id/buttonRegisterCheckEmailBtn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button"
            android:text="학생 인증"></Button>

        <EditText
            android:id="@+id/editTextRegisterCheckEmailConfirm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Enter your 6-digit code"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="30dp"
            android:visibility="gone"></EditText>

        <Button
            android:id="@+id/buttonRegisterCheckEmailConfirmBtn"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button"
            android:text="인증하기"
            android:visibility="gone"></Button>

        <EditText
            android:id="@+id/editTextRegisterStudentNumber"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Enter StudentNumber"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="30dp"></EditText>

        <EditText
            android:id="@+id/editTextRegisterPassword"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="30dp"></EditText>

        <EditText
            android:id="@+id/editTextRegisterName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Enter Name"
            android:privateImeOptions="defaultInput-mode=korean"
            android:textAlignment="center"
            android:textSize="30dp"></EditText>

        <Spinner
            android:id="@+id/spinnerDepartmentDropDown"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="100dp"></Spinner>

        <Spinner
            android:id="@+id/spinnerDevelopment"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="100dp"></Spinner>

        <TextView
            android:id="@+id/textViewDropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegisterUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="회원가입"
            android:textSize="30dp"></androidx.appcompat.widget.AppCompatButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#303030" /> <!-- 테두리 색 -->

            <solid android:color="#00FFFFFF" /> <!-- 배경 색 -->

            <!-- corners 요소를 사용하여 모서리를 둥글게 조정합니다. -->
            <corners
                android:radius="15dp" /> <!-- 모서리를 둥글게 하는 반지름 값 -->
        </shape>
    </item>
</layer-list>
